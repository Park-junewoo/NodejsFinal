<% include partials/header.ejs %>
    <div class="container">
        <% if (players.length > 0) {%>
            <table class="table">
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Position</th>
                        <th>Number</th>
                        <th>Username</th>
                        <th>Action</th>
                    </tr>
                <tbody>
                    <% players.forEach(function(player, index){ %>
                        <tr>
                            <th><%= player.id %></th>
                            <td><img src="/playerimg/<%= player.image %>" class="player-img" alt=""></td>
                            <td><%= player.first_name %></td>
                            <td><%= player.last_name %></td>
                            <td><%= player.position %></td>
                            <td><%= player.number %></td>
                            <td><%= player.user_name %></td>
                            <td>
                            <form action="/edit/<%= player.id %>">
                            <a class="btn-sm btn-info" href="#" onclick="confirm('수정 하시겠습니까?')?this.parentElement.submit():null;">수정</a>
                            </form>
                            <form action="/delete/<%= player.id %>">
                            <a class="btn-sm btn-info" href="#" onclick="confirm('삭제 하시겠습니까?')?this.parentElement.submit():null;">삭제</a>
                            </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">선수를 추가 하시려면 <a href="/add" >여기</a> 를 눌러주세요</p>
        <% } %>
    </div>
</div>
</body>
</html>
